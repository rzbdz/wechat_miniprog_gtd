<!--components/entrycard/entrycard.wxml-->
<view class='recm-inner-card'>
  <view class='recm-left' catchtap='_entryclicked'>
    <view class='recm-title-tag'>
      <view class='right-margin bold-font'>{{entry.title}}</view>
      <van-tag type="primary" class='right-margin '>{{entry.tag}}</van-tag>
      <view class='recm-type'>
        <van-tag class='right-margin' wx:if="{{entry.waiting}}" type="warning">等待</van-tag>
        <van-tag class='right-margin' wx:if="{{!entry.waiting}}" type="success">可做</van-tag>
      </view>
    </view>
    <view class='recm-project-date'>
      <view class='right-margin'>{{entry.project}}</view>
      <view class='right-margin'>{{entry.date}}</view>
      <van-tag class='right-margin' wx:if="{{entry.outofdate}}" type="danger">超限</van-tag>
    </view>
  </view>
  <view class='recm-checkbox'>
    <switch checked="{{entry.done}}" bindchange="_checkboxchange" type="checkbox" />
  </view>
</view>